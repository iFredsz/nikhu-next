{
  "compilerOptions": {
    /* ğŸŒ Target environment */
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],

    /* âš™ï¸ Compilation behavior */
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    /* ğŸ’¡ Next.js plugin */
    "plugins": [
      {
        "name": "next"
      }
    ],

    /* ğŸ—‚ï¸ Path alias dan type root */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "typeRoots": [
      "./types",                // ğŸ‘ˆ tempat deklarasi custom types kamu
      "./node_modules/@types"   // ğŸ‘ˆ default type definitions dari npm
    ]
  },

  /* ğŸ“¦ File yang di-include ke dalam proyek */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.d.ts"           // ğŸ‘ˆ pastikan folder custom types terikut
  ],

  /* ğŸš« Folder yang di-skip */
  "exclude": ["node_modules"]
}
